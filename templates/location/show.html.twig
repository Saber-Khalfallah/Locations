{% extends 'layout/base.html.twig' %}

{% block title %}edit proprietaire{% endblock %}
{% block body %}
<div clas="container">
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>DatLoc</th>
                <td>{{ location.DatLoc ? location.DatLoc|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NbrMois</th>
                <td>{{ location.NbrMois }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ location.Montant }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_location_index') }}">back to list</a>

    <a href="{{ path('app_location_edit', {'IdLoc': location.IdLoc}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
</div>
